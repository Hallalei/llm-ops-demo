# Demo Environment Configuration
# Copy this file to .env and fill in the values

# ===========================================
# Demo Mode Settings
# ===========================================
DEMO_MODE="true"
DATABASE_SCHEMA="public"

# ===========================================
# Database Configuration
# ===========================================
# For local development with Docker:
# DATABASE_URL="postgresql://tablecn:securepassword@localhost:5432/tablecn"
#
# For Neon (recommended for Vercel deployment):
# DATABASE_URL="postgresql://user:password@ep-xxx.us-east-1.neon.tech/neondb?sslmode=require"
#
# For Supabase:
# DATABASE_URL="postgresql://postgres:password@db.xxx.supabase.co:5432/postgres"

DATABASE_URL="postgresql://tablecn:securepassword@localhost:5432/tablecn"

# Individual database settings (used by Docker Compose)
DATABASE_HOST="localhost"
DATABASE_USER="tablecn"
DATABASE_PASSWORD="securepassword"
DATABASE_NAME="tablecn"
DATABASE_PORT="5432"

# ===========================================
# Authentication (NextAuth.js)
# ===========================================
# Generate a secret: openssl rand -base64 32
AUTH_SECRET="your-auth-secret-here-generate-with-openssl"

# Your app URL (no trailing slash)
AUTH_URL="http://localhost:12138"

# Trust host header (required for production behind proxy)
AUTH_TRUST_HOST="true"

# ===========================================
# Demo Admin Account
# ===========================================
# These are used by the seed script
ADMIN_EMAIL="demo@example.com"
ADMIN_PASSWORD="DemoPassword123!"

# ===========================================
# Background Tasks (disabled for demo)
# ===========================================
ENABLE_AUTO_TRANSLATE="false"
ENABLE_AUTO_CLASSIFY="false"
ENABLE_AUTO_LANGUAGE_DETECT="false"

# ===========================================
# Optional: LLM API Configuration
# ===========================================
# Only needed if you want to test translation/classification features
# LLM_API_BASE_URL="https://api.openai.com/v1"
# VAPI_API_KEY="your-api-key"
# VAPI_BASE_URL="https://api.openai.com/v1"

# ===========================================
# Optional: Public API Access
# ===========================================
# PUBLIC_API_KEY="your-public-api-key"
# TRANSLATE_SECRET="your-internal-secret"
